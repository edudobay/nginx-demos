log_format json escape=json '{{log_format_json}}';

server_tokens off;

server {
    listen 80;
    server_name _;

    access_log /dev/stdout json;

    location / {
        return 200 "ok";
    }

    location /api/ {
        proxy_pass http://python_app:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
